{
  "name": "gakkoudayori-ai-frontend",
  "version": "1.0.0",
  "description": "学校だよりAI フロントエンド E2Eテスト",
  "private": true,
  "scripts": {
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:debug": "playwright test --debug",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:report": "playwright show-report",
    "record:test": "playwright codegen http://localhost:8080",
    "record:mobile": "playwright codegen --viewport-size=375,667 http://localhost:8080",
    "record:tablet": "playwright codegen --viewport-size=768,1024 http://localhost:8080"
  },
  "devDependencies": {
    "@playwright/test": "^1.40.0"
  }
}